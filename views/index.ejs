<%- include("layout", { body: `
<h2>Daftar Produk</h2>

<table border="1" cellpadding="8" cellspacing="0">
  <tr>
    <th>No</th>
    <th>Nama Produk</th>
    <th>Harga</th>
    <th>Stok</th>
    <th>Aksi</th>
  </tr>
  ${produk.map((p, i) => `
  <tr>
    <td>${i + 1}</td>
    <td>${p.nama}</td>
    <td>${p.harga}</td>
    <td>${p.stok}</td>
    <td>
      <form action="/hapus/${p.id}?_method=DELETE" method="POST" style="display:inline;" onsubmit="return confirm('Yakin mau hapus?')">
        <button type="submit">Hapus</button>
      </form>
      <form action="/beli/${p.id}" method="GET" style="display:inline;">
        <button type="submit" style="background:green;">Beli</button>
      </form>
    </td>
  </tr>
  `).join("")}
</table>
` }) %>
